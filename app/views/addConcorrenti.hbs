<div class="row">
  <div class="col-12">
    <form action="/concorrenti" method="POST">
      <div class="form-group">
        <label for="name">Nome e Cognome</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Mario Rossi">
      </div>
      <div class="form-group">
        <label for="codice">Codice</label>
        <input type="number" class="form-control" id="codice" name="codice" placeholder="112">
      </div>
      <div class="form-group">
        <label for="turno">Turno</label>
        <input type="number" class="form-control" id="turno" name="turno" placeholder="A">
      </div>
      <div class="text-center mt-5">
        <button class="btn btn-primary btn-lg" type="submit">Salva</button>
      </div>
    </form>
  </div>
</div>


